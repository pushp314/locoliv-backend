# LocoLive Backend - Production Environment (Native Deployment)
# Copy this to /opt/locolive/.env and fill in real values

# Server
PORT=8080
ENV=production

# Database - PostgreSQL running locally
DATABASE_URL=postgres://locolive:YOUR_SECURE_PASSWORD@localhost:5432/locolive?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_USER=locolive
DB_PASSWORD=YOUR_SECURE_PASSWORD
DB_NAME=locolive

# Redis - Running locally
REDIS_URL=redis://localhost:6379

# JWT - MUST change this in production!
# Generate with: openssl rand -base64 64
JWT_SECRET=GENERATE_A_STRONG_64_CHAR_SECRET_HERE
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Logging
LOG_LEVEL=info
