# LocoLive Backend - Production Environment
# Copy this to .env on your EC2 instance and fill in real values

# Server
PORT=8080
ENV=production

# Database - Use AWS RDS or Docker PostgreSQL
DATABASE_URL=postgres://locolive:CHANGE_THIS_PASSWORD@localhost:5433/locolive?sslmode=disable
DB_HOST=localhost
DB_PORT=5433
DB_USER=locolive
DB_PASSWORD=CHANGE_THIS_PASSWORD
DB_NAME=locolive

# Redis
REDIS_URL=redis://localhost:6379

# JWT - MUST change this in production!
JWT_SECRET=GENERATE_A_STRONG_64_CHAR_SECRET_HERE
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Logging
LOG_LEVEL=info
